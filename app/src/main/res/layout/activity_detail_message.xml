<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/message"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:text="Nhắc nhở "
            android:textColor="#F8F8FF"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_back_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="#222222"
            android:text="Back"
            android:textColor="#FFFF00"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="445dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="• Người nhận"
            android:textColor="#F8F8FF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_phone_detail_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="dsadsa"
            android:textColor="#777777"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="• Tin nhắn"
            android:textColor="#F8F8FF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_sms_detail_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="dsadsa"
            android:textColor="#777777"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="• Thời gian hẹn"
            android:textColor="#F8F8FF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_date_detail_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="dsadsa"
            android:textColor="#777777"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="• SIM đã chọn"
            android:textColor="#F8F8FF"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="SIM mặc định"
            android:textColor="#777777"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="• Tình trạng"
            android:textColor="#F8F8FF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_state_detail_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="dsadsa"
            android:textColor="#FFFF00"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>